(* McCarthy's ``91'' function *)

use int.Int

(* n = 110 *)
(* n = 100 *)

(* n = 100 *)
(* f91(f91(111)) *)
(* f91(101) *)
(* 91 *)

(* n = 0 *)
(* f91(f91(11)) *)


let rec f91 (n:int) : int
  variant { 100 - n }
  ensures { n <= 100 -> result = 91 }
  ensures { n > 100 -> result = n - 10 }
= if n <= 100 then f91(f91 (n + 11)) else n - 10

