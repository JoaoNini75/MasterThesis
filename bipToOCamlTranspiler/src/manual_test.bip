let induc_var_strength_red (|_b : int_|, |_c : int_|, |_n : int_|) : |_int_| = begin
	let i = |_ ref 0 _| in
	let j = ref 0 <|> ref c in
	let x = |_ ref 0 _| in

	while |_ !i < n _| do
		(*@ variant   n_l - !i_l
        invariant !i_l = !i_r 
				invariant !x_l = !x_r
        invariant !j_r = !i_r * b_r + c_r *)
		j := !i * b + c <|> x := !x + !j;
		x := !x + !j    <|> j := !j + b;
		i := |_ !i + 1 _|
	done;

	|_ !x _|
end
(*@ requires b_l = b_r && c_l = c_r && n_l = n_r
    ensures  match result with (l_res, r_res) -> l_res = r_res *) 
