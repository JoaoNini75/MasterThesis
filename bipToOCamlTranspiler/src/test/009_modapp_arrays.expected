let linear_search (a) (v) =
  let i = ref (0) in
  let res = ref (-1) in

  while ((!res < 0) && (!i < Array.length (a))) do
    let t = a.(!i) in
    if (t = v)
    then begin 
      res := !i
    end else begin 
      ()
    end;
    i := (!i + 1)
  done;

  !res
(*@	ensures true *)


