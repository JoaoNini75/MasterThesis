let bip_cycle (|_b : int_|, |_c : int_|, |_n : int_|) : |_int_| = begin
    let i = |_ ref 0 _| in
    let j = ref 0 | ref c in
    let x = |_ ref 0 _| in

    while |_ !i < n _| do
      (*@ invariant !i_l >= 0 && !i_r >= 0 && !i_l = !i_r && (n_l >= 0 -> !i_l <= n_l)
          invariant !j_r = !i_r * b_r + c_r
          invariant !x_l = !x_r 
          variant n_l - !i_l *)
        j := !i * b + c | x := !x + !j;
        x := !x + !j    | j := !j + b;
        i := |_ !i + 1 _|
    done;

    |_ !x _|
end
